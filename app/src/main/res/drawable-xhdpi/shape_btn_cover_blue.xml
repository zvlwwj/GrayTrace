<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
    <!-- corners设置圆角，只适用于rectangle -->
    <corners android:radius="5dp" />
    <!-- stroke设置描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/colorAccent" />
</shape>